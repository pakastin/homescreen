
.app
  display: inline-block
  width: calc(100% / 3 - 1rem)
  height: calc(100% / 3 - 2rem)
  position: relative
  margin: .5rem

  > .thumb
    background-color: #222
    width: 100%
    height: 100%
    position: relative
    border-radius: 25%;

    > i
      color: #fff
      position: absolute
      top: 50%
      left: 50%
      font-size: 3rem
      transform: translate(-50%, -50%)

  > p
    text-align: center
    font-size: .75rem
    line-height: 1rem
    padding: .5rem 0
