
.folder
  position: relative
  display: inline-block
  vertical-align: top

  width: 7.5rem
  height: 8.5rem

  margin: .25rem
  padding: .25rem

  > .bg
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background-color: #eee
    border-radius: .75rem

  &.opened
    width: auto
    height: auto

    .app
      width: 7.5rem
      height: 7.5rem

  > p
    position: absolute
    bottom: -2rem
    left: 0
    width: 100%

    font-size: .75rem
    line-height: 1rem

    padding: .5rem 0

    text-align: center
